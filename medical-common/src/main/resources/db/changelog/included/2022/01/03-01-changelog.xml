<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1641239153616-1" author="youssef">
        <createTable tableName="comments">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_comments"/>
            </column>
            <column name="body" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1641239153616-2" author="youssef">
        <createTable tableName="posts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_posts"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="doctor_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1641239153616-3" author="youssef">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="dtype" type="VARCHAR(31)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="VARCHAR(255)"/>
            <column name="email_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="provider" type="VARCHAR(255)"/>
            <column name="provider_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1641239153616-4" author="youssef">
        <addUniqueConstraint columnNames="email" constraintName="uc_74165e195b2f7b25de690d14a" tableName="users"/>
    </changeSet>
    <changeSet id="1641239153616-5" author="youssef">
        <addForeignKeyConstraint baseColumnNames="post_id" baseTableName="comments" constraintName="FK_COMMENTS_ON_POST"
                                 referencedColumnNames="id" referencedTableName="posts"/>
    </changeSet>
    <changeSet id="1641239153616-6" author="youssef">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="comments" constraintName="FK_COMMENTS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1641239153616-7" author="youssef">
        <addForeignKeyConstraint baseColumnNames="doctor_id" baseTableName="posts" constraintName="FK_POSTS_ON_DOCTOR"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>